# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
GET     /nearby                     controllers.RestaurantController.searchRestaurantsNearby(longitude:Double ?= -96.726425, latitude:Double ?= 46.87762 )
GET     /chain                      controllers.RestaurantController.checkChainRestaurants(longitude:Double ?= -96.726425, latitude:Double ?= 46.87762)
GET     /distance                   controllers.RestaurantController.calculateDistance(userLat:Double ?=46.87762 , userLon:Double ?=-96.726425 , restId:String ?= "e4e15a23-8927-469a-82b3-f8111876a483")
GET     /open                       controllers.RestaurantController.CheckIfOpen(restId:String ?= "e8a37b8c-97b9-45c2-a28a-dbd58a96af6f")
GET     /search                     controllers.RestaurantController.SearchRestaurants(longitude:Double ?= -96.726425, latitude:Double ?= 46.87762 ,restName:String)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


GET     /restaurants/search/:state  controllers.RestaurantController.searchByState(state: String)

GET     /filterByCuisine/:cuisine   controllers.RestaurantController.searchByCuisine(cuisine: String)

